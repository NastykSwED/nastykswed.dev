---
import { buttonVariants } from '@/ui/button';

const { href, title, icon: Icon } = Astro.props;
---

<a
	href={href}
	title={title}
	aria-label={title}
	target='_blank'
	rel='noopener noreferrer'
	class={buttonVariants({
		variant: 'ghost',
		size: 'icon',
		class: 'opacity-80 transition-opacity duration-150 hover:opacity-100',
	})}
>
	<Icon class='size-5' />
</a>
